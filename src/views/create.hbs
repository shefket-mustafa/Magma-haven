
        <section id="create-container">
            <div class="create-container-info">
                <h1>Create Volcano Wiki</h1>
                <form method="POST">
                    <label>Name:</label>
                    <input type="text" id="name" name="name" placeholder="..." value="{{volcanoData.name}}">
                    <label>Location:</label>
                    <input type="text" id="location" name="location" placeholder="..." value="{{volcanoData.location}}">
                    <label>Elevation:</label>
                    <input type="number" id="elevations" name="elevation" placeholder="..." value="{{volcanoData.elevation}}">
                    <label>Year of Last Eruption:</label>
                    <input type="number" id="last-year-eruption" name="lastEruption" placeholder="..." value="{{volcanoData.lastEruption}}">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" placeholder="http://..." value="{{volcanoData.image}}">
                    <label>Volcano Type:</label>

                    <select id="type" name="typeVolcano">
                        {{#each volcanoTypes}}
                    <option value="{{value}}" {{selected}}>{{label}}</option>
                    {{/each}}
                        
                    </select>
                    <label>Description:</label>
                    <textarea id="description" name="description" placeholder="..." value="{{volcanoData.description}}"></textarea>
                    <input type="submit" id="btn" value="Submit"></input>
                </form>
            </div>
        </section>
